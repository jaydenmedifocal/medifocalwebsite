rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin/technician/manager
    function isAdminOrTechnician() {
      return isAuthenticated() && 
        (request.auth.token.role in ['admin', 'technician', 'manager', 'supervisor', 'super_admin'] ||
         get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role in ['admin', 'technician', 'manager', 'supervisor', 'super_admin']);
    }
    
    // Customers collection - users can read/write their own data
    match /customers/{customerId} {
      allow read: if isAuthenticated() && (request.auth.uid == customerId || isAdminOrTechnician());
      allow write: if isAuthenticated() && request.auth.uid == customerId;
      allow create: if isAuthenticated();
    }
    
    // Products collection - public read access (works in incognito mode), admins can write
    match /products/{productId} {
      allow read: if true; // Public read access for products
      allow write: if isAdminOrTechnician();
    }
    
    // Categories collection - public read access (works in incognito mode), admins can write
    match /categories/{categoryId} {
      allow read: if true; // Public read access for categories
      allow write: if isAdminOrTechnician();
    }
    
    // Collections collection (for product categories) - public read access, admins can write
    match /collections/{collectionId} {
      allow read: if true; // Public read access for categories
      allow write: if isAdminOrTechnician();
    }
    
    // Guest checkout sessions - allow unauthenticated users to create and read (for guest checkout)
    match /guest_checkout_sessions/{sessionId} {
      allow create: if true; // Anyone can create a checkout session
      allow read: if true; // Anyone can read their own checkout session (needed for onSnapshot)
      allow update, delete: if false; // Only extension can update/delete
    }
    
    // Customer checkout sessions - authenticated users can create in their own subcollection
    match /customers/{customerId}/checkout_sessions/{sessionId} {
      allow create: if isAuthenticated() && request.auth.uid == customerId;
      allow read: if isAuthenticated() && (request.auth.uid == customerId || isAdminOrTechnician());
      allow update, delete: if false; // Only extension can update/delete
    }
    
    // Orders collection - users can read their own orders, admins can read all
    match /orders/{orderId} {
      allow read: if isAuthenticated() && 
        (resource.data.customerId == request.auth.uid || isAdminOrTechnician());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        (resource.data.customerId == request.auth.uid || isAdminOrTechnician());
    }
    
    // Raspberry Pi Status - admins can read, service account can write
    match /raspberry_pi_status/{document} {
      allow read: if isAdminOrTechnician();
      allow write: if false; // Only service account can write (bypasses rules)
    }
    
    // Raspberry Pi Sync History - admins can read, service account can write
    match /raspberry_pi_sync/{document} {
      allow read: if isAdminOrTechnician();
      allow write: if false; // Only service account can write (bypasses rules)
    }
    
    // Allow all other collections for authenticated users (adjust as needed)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}

